.row
  .col-md-6
    %h4 Log In
    %form{method: 'post', action: '/login'}
      .form-group
        %label Email Address
        %input.form-control{type: 'email', name: 'email', required: 'required', placeholder: 'tiger@woods.com'}
      .form-group
        %label Password
        %input.form-control{type: 'password', name:'password', required: 'required'}
      %button.btn.btn-default{type: 'submit'} Log In!
  .col-md-6
    %h4 Sign Up
    %form{method: 'post', action: '/signup'}
      .form-group
        %label Email Address
        %input.form-control{type: 'email', name: 'email', required: 'required', placeholder: 'tiger@woods.com'}
      %button.btn.btn-default{type: 'submit'} Sign Up!
.row
  .col-md-6
    %h4 Google Login/Signup
    %a{href: '/login-with-google'}
      %img{src: '/img/btn_google_signin_dark_normal_web.png', alt: 'Sign in with Google'}
